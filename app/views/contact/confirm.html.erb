									<th width="150">お名前</th>
									<td>
										<%= @contact.name %>
									</td>
								</tr>
								<tr>
									<th width="150">メールアドレス</th>
									<td>
										<%= @contact.email %>
									</td>
								</tr>
								<tr>
									<th>お問い合わせ内容</th>
									<td>
										<%= @contact.content %>
									</td>
								</tr>
							</table>
							<div class="c">
