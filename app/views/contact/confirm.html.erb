						<h2 class="title">CONTACT<span>確認画面</span></h2>

						<!-- フォームの情報はここからです -->
						<%= form_tag("/contact/create", method: :post, data: { turbo: false }) do %>
							<%= hidden_field_tag :name, @contact.name %>
							<%= hidden_field_tag :email, @contact.email %>
							<%= hidden_field_tag :content, @contact.content %>
							<table class="ta1">
								<!--<tr><td colspan="2" class="auto"><strong>確認画面</strong></td></tr>-->
